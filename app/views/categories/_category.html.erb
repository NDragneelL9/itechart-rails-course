<% @categories.each do |category| %>
  <div class="row">
    <div class="col s6 offset-s3">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title"><%= category.name %></span>
          <p>Amount of cash: 
            <%= category.amount_cents %> 
            <%= category.amount_currency %>
          </p>
        </div>
        <div class="card-action">
          <%= link_to edit_user_personality_category_path(@personality, category), class: "waves-effect waves-light btn light-green darken-2" do %>
            <i class="material-icons left">edit</i>Edit
          <% end %>
          <%= link_to user_personality_category_path(@personality, category), 
              class: "waves-effect waves-light btn light-green darken-2", 
              method: :delete, 
              data: {confirm: "Are you sure?"} do %>
            <i class="material-icons left">delete</i>Delete
          <% end %>
        </div>
        <div class="card-action">
           <%= link_to 'Watch info', user_personality_category_path(@personality, category), class: "waves-effect waves-light btn light-green darken-2" %>
        </div>
      </div>
    </div>
  </div>
<% end %>