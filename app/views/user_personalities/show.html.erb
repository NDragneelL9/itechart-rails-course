<div class="container center">
  <div class="row">
    <div class="col s6 offset-s3">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">
            <%= @personality.name %>
          </span>
        </div>
        <div class="card-action">
          <%= link_to [:edit, @personality],
              class: "waves-effect waves-light btn light-green darken-2" do %>
            <i class="material-icons left">edit</i>Edit
          <% end %>
          <%= link_to @personality, 
              class: "waves-effect waves-light btn light-green darken-2", 
              method: :delete, 
              data: {confirm: "Are you sure?"} do %>
            <i class="material-icons left">delete</i>Delete
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div>
    <%= link_to [@personality, :graphics],
        class: "waves-effect waves-light btn light-green darken-2" do %>
      View graphics
    <% end %>  
  </div>
  <br>
  <div>
    <%= link_to [:new, @personality, :category], 
        class: "waves-effect waves-light btn light-green darken-2" do %>
      <i class="material-icons left">add</i>Create category
    <% end %>
  </div>
  <%= render 'categories/category' %>
</div>
