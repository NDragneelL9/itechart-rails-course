<div class="valign-wrapper row login-form">
  <div class="col card hoverable s6 offset-s3">
    <div class="card-content">
      <span class="card-title center">
        <%= @personality.id.nil? ? 'Create personality' : 'Update personality' %>
      </span>
      <div class="divider"></div>
      <%= render 'shared/error_messages', obj: @personality %>
      <%= form_with(model: @personality, local: true) do |f| %>
        <div class="form-inputs row">
          <div class="input-field col s12">
            <%= f.text_field :name, required: true, autofocus: true, placeholder: "Wife" %>
            <%= f.label :name %>
          </div>
        </div>
        <div class="form-actions center">
          <%= f.submit(@personality.new_record? ? "Create" : "Update", 
              class: "btn waves-effect white-text light-green darken-2") %>
        </div>
      <% end %>
    </div>
  </div>
</div>