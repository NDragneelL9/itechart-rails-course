<div class="valign-wrapper row login-form">
  <div class="col card hoverable s10 pull-s1 m6 pull-m3 l4 pull-l4">
    <div class="card-content">
      <span class="card-title center">Forgot your Password?</span>
      <div class="divider"></div>
      <%= form_for resource, as: resource_name, url: password_path(resource_name), html: { method: :post } do |f| %>
        <% if devise_error_messages? || alert %>
          <div class="form-errors red lighten-1">
            <%= devise_error_messages! %>
            <%= alert %>
          </div>
        <% end %>
        <div class="form-inputs row">
          <div class="input-field col s12">
            <i class="material-icons prefix">email</i>
            <%= f.email_field :email, autofocus: true, required: true %>
            <%= f.label :email %>
          </div>
        </div>
        <div class="form-actions center">
          <%= f.submit "Send Me Reset Instructions", class: "btn waves-effect light-green darken-2" %>
        </div>
      <% end %>
    </div>
    <div class="card-action">
      <div class="devise-links">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
