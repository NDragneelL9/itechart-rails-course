<div class="valign-wrapper row login-form">
  <div class="col card hoverable s6 offset-s3">
    <div class="card-content">
      <span class="card-title center">
        <%= @note.id.nil? ? 'Create note' : 'Update note' %>
      </span>
      <div class="divider"></div>
      <%= render 'shared/error_messages', obj: @note %>
      <%= form_for [@personality, @category, @transaction, @note] do |f| %>
        <div class="form-inputs row">
          <div class="input-field col s12">
            <%= f.text_area :description, required: true, autofocus: true%>
            <%= f.label :description %>
          </div>
        </div>
        <div class="form-actions center">
          <%= f.submit(@note.new_record? ? "Create" : "Update",
              class: "btn waves-effect white-text light-green darken-2") %>
        </div>
      <% end %>
    </div>
  </div>
</div>